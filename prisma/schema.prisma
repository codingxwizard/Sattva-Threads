// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
}

model Collection {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  image String
  // Product Product[]
}

model Product {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  // collection   Collection? @relation(fields: [collectionId], references: [id])
  // collectionId String?
  offerPrice Int?
  mrp        Int?
  images     String[]
  type       String?
  desc       String[]
  care       String[]
  size       String?
}
